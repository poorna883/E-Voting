<% include header.ejs %>
<div class="container">
    <div class="row" id="register_row">
        <div class="col-md-6" id="cam_col">
            <video autoplay id="camera" style="border-radius: 1em;"></video>
            <button id="take_snapshots" class="btn btn-secondary btn-danger btn-block" style="margin-top: 1.5em;border-radius: .5em;">Capture</button>
            <canvas id='snapshots' ></canvas>
        </div>
        <div class="col-md-12" id="reg_col" >
            <div class="">
                <div class="container">
                    <h1 class="display-4" ></h1>
                    <p class="lead">

                        <form method="post" action="/register" enctype="multipart/form-data" class="login" style="margin-top: 20em; margin-bottom: 10em;">
                            <div class="form-group">
                                <label for="name"></label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name">
                                <small class="form-text text-muted"></small>
                            </div>
                            <div class="form-group">
                                <label for="email"></label>
                                <input type="text" class="form-control" id="email" name="email"
                                    placeholder="Enter Email ID">
                            </div>
                            <div class="form-group">
                                <label for="phone_number"></label>
                                <input type="text" class="form-control" id="phone_number" name="phone_number"
                                    placeholder="Enter Phone Number">
                            </div>
                            <div class="form-group" hidden>
                                <input type="hidden" class="form-control" id="avatar" name="avatar" filename="name">
                            </div>
                            <div class="form-group">
                                <label for="aadhaar"></label>
                                <input type="text" class="form-control" id="aadhaar" name="aadhaar"
                                    placeholder="Enter Voter ID">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="constituency"  style="margin-top:1em" >Constituency</label>
                                </div>
                                <select class="custom-select" id="constituency" name="constituency"  style="margin-top:1em">
                                    <option selected>Choose...</option>
                                    <option value="Andhra Pradesh">Andhra Pradesh</option>
                                    <option value="Tamil Nadu">Tamil Nadu</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <button type="submit" id="register_btn" class="btn btn-success btn-lg btn-block"
                                    disabled>Submit</button>
                            </div>
                        </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

